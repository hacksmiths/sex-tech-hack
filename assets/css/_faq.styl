.faq
	margin-bottom 2em
	ul
		padding-left 0
		margin-top 2em
		display: flex
		flex-wrap: wrap
		justify-content: space-between
		li
			list-style-type: none
			background: white
			box-shadow: 0 0.25em 0.5em rgba(0,0,0,0.25)
			width: calc(50% - 3em)
			margin-bottom: 2em
			padding: 1em
			box-sixing: border-box
			h2
				margin-top 0
				margin-bottom 1rem
				line-height 1.5
				color: $red
			p 
				margin-bottom 0
				line-height: 1.5
				a
					color: $red
					text-decoration none
					font-style: italic
			+below(700px)
				width: 100%